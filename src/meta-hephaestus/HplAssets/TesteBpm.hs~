module HplAssets.TesteBpm where

import BusinessProcess.Types
import HplAssets.BusinessProcesses
import List

addLista :: BusinessProcessTransformation -> [BusinessProcessTransformation] -> [BusinessProcessTransformation]
addLista t lt = insert t lt

ordenaLista :: [BusinessProcessTransformation] -> [BusinessProcessTransformation]
ordenaLista la = sort la

--lista ordenada das transformações. Quando usamos "insert" para inserir elementos na lista
lista1 :: [BusinessProcessTransformation]
lista1 = addLista (BindParameter "2" (Value "a")) 
           (addLista (SelectBusinessProcess "11") 
               (addLista (SelectBusinessProcess "1")
                    (addLista (EvaluateAdvice "3")
                       (addLista (SelectBusinessProcess "111") [] ))))
             
--lista não ordenada, mas se chamarmos a função "ordenaLista" definida acima, OK lista ordenada             
lista2 ::[BusinessProcessTransformation]
lista2 = [BindParameter "2" (Value "a")]++[SelectBusinessProcess "11"]++[SelectBusinessProcess "1"]++[EvaluateAdvice "3"]++[SelectBusinessProcess "111"]
                    